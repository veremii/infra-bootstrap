# ==============================================
# Example Production Configuration
# Copy this file and modify for your needs
# ==============================================

# === Node Identification ===
NODE_NAME=prod-example
NODE_ENV=production
NODE_ROLE=app  # edge, app, database, all-in-one
NODE_DC=your-datacenter

# === SSH Configuration ===
SSH_PORT=2299
ADMIN_USER=admin
# Generate: ssh-keygen -t ed25519 -f ~/.ssh/admin_key
ADMIN_PUBKEY="ssh-ed25519 YOUR_KEY_HERE admin@production"
DEPLOY_USER=deployer
# Generate: ssh-keygen -t ed25519 -f ~/.ssh/deploy_key
DEPLOY_PUBKEY="ssh-ed25519 YOUR_KEY_HERE deploy@production"

# === WireGuard VPN Configuration ===
WG_IF=wg0
WG_PORT=51820
WG_SERVER_IP=10.88.0.X  # Unique IP for this node
WG_ENDPOINT_IP=YOUR_PUBLIC_IP
WG_ALLOWED_IPS=10.88.0.0/24
WG_MTU=1420

# === Node Type Configuration ===
# For edge nodes (public facing)
EDGE_OPEN_HTTP=false  # Set to true for edge nodes

# === Traefik Configuration (for edge nodes) ===
TRAEFIK_ACME_EMAIL=admin@yourdomain.com
TRAEFIK_DASHBOARD_DOMAIN=traefik.admin.yourdomain.com
BASIC_AUTH_HTPASSWD='admin:$2y$10$...'  # htpasswd -nB admin
TRAEFIK_VERSION=v3.1

# === Service Domains (for edge nodes) ===
GRAFANA_DOMAIN=grafana.admin.yourdomain.com
PORTAINER_DOMAIN=portainer.admin.yourdomain.com

# === Docker Swarm Labels ===
SWARM_LABELS="node.labels.role==app node.labels.tier==primary"

# === Service Versions ===
LOKI_VERSION=2.9.6
PROMTAIL_VERSION=2.9.6
GRAFANA_VERSION=10.4.3
PORTAINER_VERSION=2.20.3

# === Resource Limits ===
APP_CPU_LIMIT=4
APP_MEM_LIMIT=8G
TRAEFIK_CPU_LIMIT=2
TRAEFIK_MEM_LIMIT=2G

# === System Configuration ===
TZ=UTC


